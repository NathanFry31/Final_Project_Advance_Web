<% include ../partials/header%>

	<section>
	<div class="row">
		<div class = "col-sm-6">
			<div class = "card">
				<div class = "card-body">
				<h3 class= " card title">
					<%=books.title %>
				</h3>
				<p>
					<%=books.author %>
				</p>
				<p>
					<%=books.cover %>
				</p>
				<p>
					<%=books.price %>
				</p>
				<p>
					<%=books.releaseDate %>
				</p>
				<div class="actions">
				<form action = "/books/<%= books.id %>">
					<input type="hidden" name="id" value="<%= books.id %>">
					<button type="submit" class="btn btn-primary">Show</button>
				</form>
				<form action="/books/<%= books.id %>/edit">
					<input type="hidden" name="id" value="<%= books.id %>">
					<button type="submit" class="btn btn-primary">Edit</button>
				</form>
				<form action="/books/<%= books.id %>/delete" method="post" onsubmit="return confirm('Are you 100% positive you want to delete this book!');">
					<input type="hidden" name="id" value="<%= books.id %>">
					<button type="submit" class="btn btn-danger">Delete</button>
				</form>
			</div>
		</div>
	</div>
</div>
</div>
</section>
<% include ../partials/footer%>
