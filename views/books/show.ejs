<!DOCTYPE html>
<html>
<head>
	<title><%= title %></title>
	<link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
	<div class="container">
		<header>
			<div class="container2">
			<h1><%= title %></h1>
			</div>
		</header>
		<section>
			<div>
				<a href="/books/new"> New Books</a>
			</div>
	</div>
	<div class="row">
		<div class = "col-sm-6">
			<div class = "card">
				<div class = "card-body">
				<h5 class= " card title">
					<%=books.title %>
				</h5>
				<p>
					<%=books.cover %>
				</p>
				<p>
					<%=books.price %>
				</p>
				<div class="actions">
				<form action = "/books/<%= books.id %>">
					<input type="hidden" name="id" value="<%= books.id %>">
					<button type="submit" class="btn btn-primary">Show</button>
				</form>
				<form action="/books/<%= books.id %>/edit">
					<input type="hidden" name="id" value="<%= books.id %>">
					<button type="submit" class="btn btn-primary">Edit</button>
				</form>
				<form action="/books/<%= books.id %>/delete" method="post" onsubmit="return confirm('Are you 100% positive you want to delete this book!');">
					<input type="hidden" name="id" value="<%= books.id %>">
					<button type="submit" class="btn btn-danger">Delete</button>
				</form>
			</div>
		</div>
	</div>
</div>
</div>
</section>
</body>
</html>
