<% include ../partials/header %>
		<section>
			<div class="row">
				<% for(let book of books) { %>
					<div class = "col-sm-6">
						<div class = "card">
							<h3>
								<%=book.title %>
							</h3>
							<p>
								<%=book.author %>
							</p>
							<p>
								<%=book.cover %>
							</p>
							<p>
								<%=book.price %>
							</p>
							<p>
								<%=book.releaseDate %>
							</p>
							<div class="actions">
							<form action = "/books/<%= book.id %>">
								<input type="hidden" name="id" value="<%= book.id %>">
								<button type="submit" class="btn btn-primary">Show</button>
							</form>
							<form action="/books/<%= book.id %>/edit">
								<input type="hidden" name="id" value="<%= book.id %>">
								<button type="submit" class="btn btn-primary">Edit</button>
							</form>
							<form action="/books/<%= book.id %>/delete" method="post" onsubmit="return confirm('Are you 100% positive you want to delete this book!');">
								<input type="hidden" name="id" value="<%= book.id %>">
								<button type="submit" class="btn btn-danger">Delete</button>
							</form>
						</div>
						</div>
					</div>
				<% } %>
			</div>
		</section>
<% include ../partials/footer%>
