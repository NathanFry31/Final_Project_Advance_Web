<!DOCTYPE html>
<html>
<head>
	<title><%= title %></title>
	<link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
	<div class="container">
		<header>
			<div class="container2">
			<h1><%= title %></h1>
			</div>
		</header>
		<section>
			<div class="row">
				<% for(let book of books) { %>
					<div class = "col-sm-6">
						<div class = "card">
							<h5>
								<%=book.title %>
							</h5>
							<p>
								<%=book.cover %>
							</p>
							<p>
								<%=book.price %>
							</p>
						</div>
					</div>
				<% } %>
			</div>
		</section>
</body>
</html>
