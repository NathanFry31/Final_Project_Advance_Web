<!DOCTYPE html>
<html>
<head>
	<title><%= title %></title>
	<link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
	<div class="container">
		<header>
			<div class="container2">
			<h1><%= title %></h1>
			</div>
		</header>
		<section>
			<div>
				<a href="/books/new">Add a New Book!</a>
			</div>
			<div class="row">
				<% for(let book of books) { %>
					<div class = "col-sm-6">
						<div class = "card">
							<h5>
								<%=book.title %>
							</h5>
							<p>
								<%=book.cover %>
							</p>
							<p>
								<%=book.price %>
							</p>
							<div class="actions">
							<form action = "/books/<%= book.id %>">
								<input type="hidden" name="id" value="<%= book.id %>">
								<button type="submit" class="btn btn-primary">Show</button>
							</form>
							<form action="/books/<%= book.id %>/edit">
								<input type="hidden" name="id" value="<%= book.id %>">
								<button type="submit" class="btn btn-primary">Edit</button>
							</form>
							<form action="/books/<%= book.id %>/delete" method="post" onsubmit="return confirm('Are you 100% positive you want to delete this book!');">
								<input type="hidden" name="id" value="<%= book.id %>">
								<button type="submit" class="btn btn-danger">Delete</button>
							</form>
						</div>
						</div>
					</div>
				<% } %>
			</div>
		</section>
</body>
</html>
